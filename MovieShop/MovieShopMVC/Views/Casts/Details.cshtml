@model ApplicationCore.Models.CastModel

<div class="container text-center">
    <div class="row">
        <div class="col-4">
            <img src="@Model.ProfilePath" class="img-fluid" alt="@Model.Name">
        </div>
        <div class="col">        
            <ul class="list-group list-group-flush">
                <li class="list-group-item">@Model.Name</li>
                <li class="list-group-item">@Model.Character</li>
            </ul>
        </div>
    </div>
    <hr>
    <h3>Other movies from @Model.Name</h3>
    <br>
    <div class="rounded">
        <div class="container-fluid">
            <div class="row">
                @foreach (var movie in @Model.Movies)
                {
                    <div class="col-xl-2 col-sm-4 col-lg-3 col-6">
                        <div class="card mb-4">
                            <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id">
                                <img src="@movie.PosterUrl" class="img-fluid" alt="@movie.Title" />
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>